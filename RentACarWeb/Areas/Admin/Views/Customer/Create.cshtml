@using RentACarWeb.Areas.Admin.Models.Customer
@inject IHtmlLocalizer<Lang> Localizer
@model CustomerCreateVM

<form method="post">
    <div class="mb-3">
        <label asp-for="@Model.FirstName">@Localizer["page.FirstName"]</label>
        <input asp-for="@Model.FirstName" class="form-control" /> 
        <span asp-validation-for="@Model.FirstName" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="@Model.LastName">@Localizer["page.LastName"]</label>
        <input asp-for="@Model.LastName" class="form-control" />
        <span asp-validation-for="@Model.LastName" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="@Model.PhoneNumber">@Localizer["page.PhoneNumber"]</label>
        <input asp-for="@Model.PhoneNumber" class="form-control" placeholder="(5**) *** ****" />
        <span asp-validation-for="@Model.PhoneNumber" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="@Model.Budget">@Localizer["page.Budget"]</label>
        <input asp-for="@Model.Budget" class="form-control" step="1000" />
        <span asp-validation-for="@Model.Budget" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">@Localizer["page.Create"]</button>
</form>