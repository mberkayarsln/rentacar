@using RentACarWeb.Areas.Admin.Models.Customer
@model CustomerEditVM

<form method="post">
    <input type="hidden" asp-for="@Model.Id" />
    <div class="mb-3">
        <label asp-for="@Model.FirstName"></label>
        <input asp-for="@Model.FirstName" class="form-control" />
        <span asp-validation-for="@Model.FirstName" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="@Model.LastName"></label>
        <input asp-for="@Model.LastName" class="form-control" />
        <span asp-validation-for="@Model.LastName" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="@Model.PhoneNumber"></label>
        <input asp-for="@Model.PhoneNumber" class="form-control" placeholder="(5**) *** ****" />
        <span asp-validation-for="@Model.PhoneNumber" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="@Model.Budget"></label>
        <input asp-for="@Model.Budget" class="form-control" step="1000" min="0" />
        <span asp-validation-for="@Model.Budget" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="@Model.isActive"></label>
        <input type="checkbox" class="form-check" asp-for="@Model.isActive"/>
        <span asp-validation-for="@Model.isActive" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>