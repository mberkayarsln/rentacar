@using RentACarWeb.Areas.Admin.Models.Rental
@model RentalEditVM

<form method="post">
    <div class="mb-3">
        <label asp-for="@Model.CustomerId">@ViewBag.Customer</label>
        <select asp-for="@Model.CustomerId" class="form-select">
            @if (Model.CustomerCar.Customers == null)
            {
                <p>Customer list is empty</p>
            }
            else
            {
                if (Model.CustomerCar.Customers.Count == 0)
                {
                    <option disabled>No customers found</option>
                }
                else
                {
                    @foreach (var customer in Model.CustomerCar.Customers)
                    {
                        <option value="@customer.Id">@customer.FirstName @customer.LastName</option>
                    }
                }
            }
        </select>
        <span asp-validation-for="@Model.CustomerId" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="@Model.CarId">@ViewBag.Car</label>
        <select asp-for="@Model.CarId" class="form-select">
            @if (Model.CustomerCar.Cars == null)
            {
                <p>Car list is empty</p>
            }
            else
            {
                if (Model.CustomerCar.Cars.Count == 0)
                {
                    <option disabled>No cars found</option>
                }
                else
                {
                    @foreach (var car in Model.CustomerCar.Cars)
                    {
                        <option value="@car.Id">@car.Make @car.Model</option>
                    }
                }
            }
        </select>
    </div>
    <div class="mb-3">
        <label asp-for="@Model.StartingDate">@ViewBag.StartDate</label>
        <input asp-for="@Model.StartingDate" class="form-control" />
        <span asp-validation-for="@Model.StartingDate" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="@Model.EndingDate">@ViewBag.EndDate</label>
        <input asp-for="@Model.EndingDate" class="form-control" />
        <span asp-validation-for="@Model.EndingDate" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">@ViewBag.Edit</button>
</form>