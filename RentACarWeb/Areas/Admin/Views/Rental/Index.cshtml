@using RentACarWeb.Areas.Admin.Models.Rental
@model List<RentalListVM>

<div class="container">
    <table class="table">
        <thead>
            <tr>
                <th>Customer</th>
                <th>Car</th>
                <th>Starting Date</th>
                <th>Ending Date</th>
                <th>Payment</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var rental in Model)
            {
                <tr>
                    <td>@rental.Customer</td>
                    <td>@rental.Car</td>
                    <td>@rental.StartingDate</td>
                    <td>@rental.EndingDate</td>
                    <td>@rental.Payment</td>
                    <td>
                        <a asp-area="Admin" asp-controller="Rental" asp-action="Edit" class="btn btn-info w-25" asp-route-id="@rental.Id">Edit</a>
                        <a class="btn btn-danger w-25 delete" data-id="@rental.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div class="container">
    <a asp-area="Admin" asp-controller="Rental" asp-action="Create" class="btn btn-primary">Create Rental</a>
</div>